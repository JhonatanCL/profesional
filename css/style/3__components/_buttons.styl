.btn
	padding 15px 20px
	display inline-block
	width auto
	text-align center
	letter-spacing 1px
	margin 16px auto
	color var(--c-white)
	text-transform uppercase
	&-primary
		border 1px solid var(--c-primary)
		background-color var(--c-primary)
		transition all .3s
		margin-top 8px
		color #fff
		&:hover
			background-color var(--c-white)
			color var(--c-primary)
	&-secondary
		background-color transparent
		border 1px solid var(--c-white)
		margin 0 10px
		margin-top 20px
		text-transform uppercase
		transition all .3s
		&:hover
			background-color var(--c-primary)
			color #fff
	&-fixed
		position fixed
		right 10px
		bottom 0px
		z-index 99
		border-radius 50%
		font-size 30px
		width 60px
		height 60px
		display flex
		align-items center
		justify-content center
		box-shadow 1px 1px 1px #ccc
	&-banner
		margin-top 36px
	&-wsp
		background-color #00D635
		background-image linear-gradient(180deg, #00D635, #32ED37)
		box-shadow 0 2px 6px #222
		border-radius 50%
		padding 15px
		position fixed
		z-index 99
		bottom 20px
		left 20px
		color #fff
		transition all .3s
		.icon
			width 36px
			height 36px
			text-align center
			margin-right 0
		&:hover
			transform: translateY(-16px)
			box-shadow 0px 10px 4px rgba(#222,.3)
		@media screen and (max-width 768px)
			left 10px
			bottom 10px