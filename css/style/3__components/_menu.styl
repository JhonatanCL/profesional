.menu
	display flex
	justify-content space-around
	@media screen and (max-width 768px)
		display block
		position fixed
		background-color rgba(#fff,.98)
		left -100%
		top 0px
		z-index 99999
		height 100vh
		width 280px
		padding 10px 20px
		transition left .5s
		overflow auto
		&.active
			left 0
	&__img
		display none
		@media screen and (max-width 768px)
			display block
			background-size 150px
			background-repeat no-repeat
			background-position center
			width 150px
			height 150px
			margin 20px auto
	&__link
		display block
		padding 15px 20px
		// color var(--c-primary)
		font-size 16px
		text-transform uppercase
		font-weight bold
		transition color .3s
		letter-spacing 0px
		font-weight 500
		color #222
		&:hover
			opacity 0.8
		@media screen and (max-width 768px)
			border-bottom 1px solid rgba(#fff,.4)
			padding 20px 0
			text-align center
		// font-family poppins-medium
		// text-shadow 1px 1px 1px #222