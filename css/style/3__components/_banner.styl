.banner
	// background-image url('../img/civil.jpg')
	background-size cover
	background-position top
	height 550px
	position relative
	overflow hidden
	@media screen and (max-width 768px)
		height 80vh
	&:before
		// background-color rgba(#fff,.8)
		content ''
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		z-index -1

	&__item
		z-index 2
		position relative
		top -90px
		width 100%
	&-container
		z-index 2
		text-align center
		width 80%
		padding-top 80px
	&__img
		background-color rgba(#fff,.95)
		background-color transparent
		border-radius 50%
		display inline-block
		width 300px
		padding 0px
		@media screen and (max-width 768px)
			width 220px
.fondo
	width: 50%
	height: 100%
	bottom: 0
	// right: calc(0% - 250px)
	right 0
	position: absolute
	transform-origin: left bottom
	transform: skewX(135deg)
	z-index: -3
	overflow: hidden
	background-color rgba(#ED3237,.8)
	background-color #12CDC8
.oculta
	overflow hidden
	position relative