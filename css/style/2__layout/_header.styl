.header
	display flex
	padding 5px 10px
	// max-width 1200px
	margin auto
	justify-content space-between
	align-items center
	// position absolute
	left 50%
	max-width 1200px
	z-index 99
	&__logo
		color #fff
		text-transform uppercase
		font-weight 500
		font-size 20px
		letter-spacing 1px
		display flex
		align-items center
		padding 0
		&-img
			max-width 100px
			padding 0 20px 
		@media screen and (max-width 768px)
			font-size 18px
	&__button
		background-color var(--c-primary)
		border-radius 8px
		@media screen and (max-width 768px)
			margin-top 20px
			.header__menu__link
				border-bottom none
		&-menu
			display none
			@media screen and (max-width 768px)
				display block
				color var(--c-white)
				font-size 24px

.icon
	transition all .3s
	width 60px
	height 60px
	&:hover
		background-color green
		cursor pointer
		color #fff